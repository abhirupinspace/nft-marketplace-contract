# ============================================
# NFT Launchpad - Environment Configuration
# ============================================
# Copy this file to .env and fill in your values
# NEVER commit your .env file to version control

# ============================================
# DEPLOYER WALLET
# ============================================
# Your deployer wallet private key (without 0x prefix)
# WARNING: Keep this secret! Never share or commit this!
PRIVATE_KEY=your_private_key_here

# ============================================
# COLLECTION CONFIGURATION
# ============================================
# These are used during deployment
COLLECTION_NAME="My NFT Collection"
COLLECTION_SYMBOL="MNFT"
MAX_SUPPLY=10000
ROYALTY_BPS=500

# ============================================
# RPC ENDPOINTS
# ============================================
# Optional: Override default RPC URLs
# You can get free RPC endpoints from:
# - Alchemy: https://www.alchemy.com
# - Infura: https://infura.io
# - QuickNode: https://www.quicknode.com

# Ethereum
MAINNET_RPC_URL=
SEPOLIA_RPC_URL=https://rpc.sepolia.org

# Base
BASE_RPC_URL=https://mainnet.base.org
BASE_SEPOLIA_RPC_URL=https://sepolia.base.org

# Polygon
POLYGON_RPC_URL=https://polygon-rpc.com
POLYGON_AMOY_RPC_URL=https://rpc-amoy.polygon.technology

# Arbitrum
ARBITRUM_RPC_URL=
ARBITRUM_SEPOLIA_RPC_URL=https://sepolia-rollup.arbitrum.io/rpc

# Optimism
OPTIMISM_RPC_URL=
OPTIMISM_SEPOLIA_RPC_URL=https://sepolia.optimism.io

# ============================================
# BLOCK EXPLORER API KEYS
# ============================================
# Required for contract verification
# Get your API keys from:
# - Etherscan: https://etherscan.io/apis
# - Basescan: https://basescan.org/apis
# - Polygonscan: https://polygonscan.com/apis
# - Arbiscan: https://arbiscan.io/apis
# - Optimism Etherscan: https://optimistic.etherscan.io/apis

ETHERSCAN_API_KEY=your_etherscan_api_key
BASESCAN_API_KEY=your_basescan_api_key
POLYGONSCAN_API_KEY=your_polygonscan_api_key
ARBISCAN_API_KEY=your_arbiscan_api_key
OPTIMISM_API_KEY=your_optimism_api_key

# ============================================
# OPTIONAL: GAS REPORTING
# ============================================
REPORT_GAS=false
COINMARKETCAP_API_KEY=

